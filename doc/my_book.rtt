[TEMPLATE_CONFIGURATION]
name = my book configuration
template = book

parts =
    title
    ;front_matter
    contents
    ;back_matter
stylesheet = sphinx_base14
language = fr

[STRINGS]
@contents = 'Contents'
@caution = 'Careful!'
@warning = 'Please be warned'

[VARIABLES]
paper_size = A5

[front_matter]
page_number_format = lowercase roman
end_at_page = left

[contents]
page_number_format = number

[title_page]
top_margin = 2cm
